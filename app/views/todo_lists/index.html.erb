<button><%= link_to "New Todo List", new_todo_list_path %></button>
<h1 style="text-align:center;">My Todo Lists</h1>

<% if @todo_lists.empty? %>
	<%= link_to "Create your first Todo List", new_todo_list_path %>
<% else %>
	<% @todo_lists.each do |todo_list| %>
		<ul> 
			<b>Title:</b> <%= todo_list.title %> 
			<p>
				<%= link_to "view", todo_list_path(todo_list.id) %> |
				<%= link_to "edit", edit_todo_list_path(todo_list.id) %> |
				<%= link_to "delete", delete_todo_list_path(todo_list.id), method: :delete, data: { confirm: "Are you sure?" } %>
			</p>
		</ul>
	<% end %>
<% end %>

